<?xml version="1.0" encoding="utf-8"?>

<resources>

  <style name="MainTheme" parent="MainTheme.Base">
  </style>
  <!-- Base theme applied no matter what API -->
  <style name="MainTheme.Base" parent="Theme.AppCompat.Light">
    <!--If you are using revision 22.1 please use just windowNoTitle. Without android:-->
    <item name="windowNoTitle">true</item>

    <!-- Set theme colors from http://www.google.com/design/spec/style/color.html#color-color-palette -->
    <!-- colorPrimary is used for the default action bar background -->
    <item name="colorPrimary">#f9f9f9</item>
    <!-- colorPrimaryDark is used for the status bar -->
    <item name="colorPrimaryDark">#b2b2b2</item>
    <!-- colorAccent is used as the default value for colorControlActivated
         which is used to tint widgets -->
    <item name="colorAccent">#43b05c</item>
    <!-- You can also set colorControlNormal, colorControlActivated
         colorControlHighlight and colorSwitchThumbNormal. -->
    <!--<item name="windowActionModeOverlay">true</item>-->
    <item name="android:textAllCaps">false</item>
    <item name="android:datePickerDialogTheme">@style/AppCompatDialogStyle</item>
    <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    <!--Transparent statusbar - already enabled in MainActivity.cs-->
    <!--<item name="android:windowTranslucentStatus">false</item>-->

    <!--<item name="android:windowContentOverlay">@drawable/actionbar_shadow</item>-->

    <!--Selected item background color in the list-->
    <item name="android:colorPressedHighlight">@color/ListViewSelected</item>
    <item name="android:colorLongPressedHighlight">@color/ListViewHighlighted</item>
    <item name="android:colorFocusedHighlight">@color/ListViewSelected</item>
    <item name="android:colorActivatedHighlight">@color/ListViewSelected</item>
    <item name="android:activatedBackgroundIndicator">@color/ListViewSelected</item>

  </style>
  <!--Selected item color in ListView-->
  <color name="ListViewSelected">#FFFFFF</color>
  <color name="ListViewHighlighted">#43b05c</color>

  <!--Changing navigationbar icon color-->
  <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
    <item name="spinBars">true</item>
    <item name="color">#43b05c</item>
  </style>

  <style name="AppCompatDialogStyle" parent="Theme.AppCompat.Light.Dialog">
    <item name="colorAccent">#43b05c</item>
  </style>
  <!--<style name="DrawerIcon" parent="Widget.AppCompat.DrawerArrowToggle">
    <item name="color">@android:color/white</item>
  </style>-->
  <style name="LaunchTheme" parent="Theme.AppCompat.NoActionBar">
    <item name="windowActionModeOverlay">true</item>
    <item name="android:windowFullscreen">true</item>
    <item name="android:windowBackground">@drawable/LaunchView</item>
    <item name="android:statusBarColor">@android:color/transparent</item>
  </style>

</resources>

